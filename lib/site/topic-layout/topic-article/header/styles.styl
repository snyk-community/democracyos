.topic-article-header
  margin-top 3em
  position relative

  h1
    font-size 2em
    margin 0

  h4
    text-align center
    margin 35px 0 0 0
    text-transform uppercase
    font-size 11px


  h2.author
    color #666
    font-size 16px
    font-weight normal
    margin 0

  .meta-information
    margin-bottom 10px
    color #666
    font-size 16px

    .icon-clock
      margin-right 6px
      font-size 13px

    .meta-timeago,
    .meta-timeago-label
      display inline-block

    .label
      display inline-block
      margin-right 10px
      border-radius 0

@media screen and (max-width: 1157px)
  .entry-tag
    display none
